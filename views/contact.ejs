<%- include('header') %>
    <div class="text-center">
        <H1>Welcome to contact</H1>
    </div>


    <form method = "post" id="send" action ="/contact">
        
        <% if(typeof sentdata != 'undefined'){  %>

            <p>email sent to <%= sentdata.email %> </p>

        <%  } else{  %>

        <div class="container-md">
            <div class="col-8">
                <input type="text" class="form-control-sm" placeholder="Email Address" name ="email">
            </div>
            <br>
            <div class="col-8">
                <textarea class="form-control" placeholder="Enter your messaage here!" name="message"></textarea>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
        <% } %>
    </form>

    <%- include('footer') %>